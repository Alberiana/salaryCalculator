<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity_rl">

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/txtv1" />

    <EditText
        android:id="@+id/surname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:ems="10"
        android:hint="@string/txtv2"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/pagabr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/surname"
        android:ems="10"
        android:hint="@string/txtv3"
        android:inputType="number" />

    <Button
        android:id="@+id/kalkulo"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pagabr"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="13dp"

        android:layout_marginEnd="50dp"
        android:text="Kalkulo" />

    <TextView
        android:id="@+id/paga"
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_below="@id/kalkulo"
        android:layout_marginTop="209dp"
        android:layout_weight="3"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <Button
        android:id="@+id/Fshije"
        android:layout_width="316dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/kalkulo"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-67dp"
        android:text="Fshije te dhenat e meparshme" />

    <Button
        android:id="@+id/Shiko"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Fshije"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="83px"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-67dp"
        android:text="SHIKO" />

    <Button
        android:id="@+id/Fshije2"
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/Shiko"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="-67dp"
        android:text="Fishje te dhenat e shenuara" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="211dp"
        android:layout_height="21dp"
        android:layout_below="@id/Shiko"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="108dp"
        android:layout_marginBottom="-67dp"
        android:visibility="gone"
        />

    <ProgressBar
        android:id="@+id/progressBar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progressBar"

        android:layout_marginTop="368dp" />
</RelativeLayout>